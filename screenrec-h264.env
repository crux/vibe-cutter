# ==================================================================================
# Screen Recording Transcoding Configuration (H.264 - QuickTime compatible)
# Optimized for screen captures with guaranteed QuickTime Player compatibility
# ==================================================================================

# --- Encoding Settings ---
# PRESET affects the encoding speed vs. compression ratio.
# Options: ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow
PRESET="medium"

# Video codec - h264 (libx264) for universal QuickTime compatibility
VIDEO_CODEC="libx264"

# CRF (Constant Rate Factor) controls the quality. Lower values mean higher quality.
# For h264 screen recordings, CRF 23-28 provides good balance
# Range: 18 (high quality) to 28 (smaller files, still readable)
CRF="26"

# --- Audio Settings ---
# Re-encode audio to AAC at moderate bitrate
AUDIO_CODEC="aac"

# --- Video Resolution ---
# Target resolution for output. The script maintains aspect ratio while scaling down.
TARGET_RESOLUTION="1280x720"

# --- Subtitle Settings ---
# Leave blank for screen recordings (typically no subtitles)
SUBTITLE_LANGUAGE=

# ==================================================================================
# NOTES:
# - h264 has better compatibility but larger files than h265
# - Guaranteed to work with QuickTime Player on macOS
# - For smaller files, use screenrec.env (h265) and play in VLC or other players
# ==================================================================================
